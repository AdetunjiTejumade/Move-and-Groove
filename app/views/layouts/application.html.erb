<!DOCTYPE html>
<html>
  <head>
    <title>MoveAndGroove</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="h-100">
    <div class="h-100">

      <div class="px-3 navbar bg-color text-white"> 
          <h1 class="inline text-1"><%= link_to 'Move and Groove', welcome_index_path %></h1>
          <div class="items d-md-block">
              <% if user_signed_in? %>
                <p class="d-inline"><%= current_user.email %></p>
                <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link hover-border-b' %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link hover-border-b'  %>
              <% else %>
                <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link hover-border-b'  %>
                <%= link_to "Login", new_user_session_path, :class => 'navbar-link hover-border-b'  %>
              <% end %>
          </div>
      </div>

      <div>
          <%= yield %>
      </div>

    </div>
  </body>
</html>

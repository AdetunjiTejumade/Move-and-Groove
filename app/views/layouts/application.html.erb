<!DOCTYPE html>
<html>
  <head>
    <title>MoveAndGroove</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body class="h-100">
    <div class="h-100">

      <nav class="navbar navbar-expand-lg justify-content-between bg-color px-3 navbar-light"> 
      
        <a class="navbar-brand text-white" href="">Move and Groove</a>
      
          <div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <% if user_signed_in? %>
                  <p class="nav-item nav-link text-white"><%= current_user.email %></p>
                  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-item nav-link text-white' %>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-item nav-link text-white'  %>
                <% else %>                  
                  <%= link_to "Sign up", new_user_registration_path, :class => 'nav-item nav-link text-white'  %>
                  <%= link_to "Login", new_user_session_path, :class => 'nav-item nav-link text-white'  %>
                <% end %>

              </ul>
          </div>
          </div>

      </nav>    
          <%= yield %>
    </div>
  </body>
      <script type="text/javascript">
    var nav = document.getElementById('items')
    function toggle() {
        if( nav.className == 'items'){
            nav.className += ' show'
        } else{
            nav.className = 'items'
        }
}
    </script>
</html>

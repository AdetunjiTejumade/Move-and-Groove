<div class="mt-5 "> 
  <div class="d-md-flex justify-content-center" style="border-radius:5px;">
    <div class="">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => 'form') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource  %>

      <div class="right px-5 pt-4">
        <div>
          <h1 class="">HELLO, FRIEND</h1>
          <p>Sign up to tacking your activities</p>
        </div>

          <div class="mt-3">
              <%= f.label :Email%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "w-100 input"%> 
          </div>

          <div class="mt-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", :class => "w-100 input"%>
          </div>
          <div class="mt-3"> 
             <%= f.label :password_confirmation %>
             <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "w-100 input"%>
          </div>
          <div class="mt-3">
              <%= f.submit "Create Account", :class => 'btn sign-up-btn text-white' %>
          </div>
      </div>
<% end %>
<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
 <div class="mt-5 d-flex justify-content-center"> 
  <div class="">
  
  <h1>Edit</h1>

  <%= form_with(model: @activity,local: true) do |form| %>

  <% if @activity.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@activity.errors.count, "error") %> prohibited
          this activity from being saved:
        </h2>
        <ul>
          <% @activity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="mt-3">
          <%= form.label :Activity %><br>
          <%= form.select :activity_name, ['Running', 'Swimming', 'Cycling','Walking','Strength Training', 'Rowing', 'Hiking', 'Mountain Biking', 'Skating', 'Skiing', 'Canoeing'] %>
      </div>

      <div class="mt-3">
          <%= form.label :Date %><br>
          <%= form.date_field :date, :class => 'input w-100' %>
      </div>

      <div class="mt-3">
          <%= form.label :Duration %><br>
          <%= form.text_field :duration, :class => 'input w-100'%>
      </div>
      
      <div class="mt-3">
           <%= form.submit "Submit", :class => 'btn sign-up-btn text-white' %>
      </div>
  <% end %>
  <div class="mt-3"> 
    <p><%= link_to 'Back', activities_path %></p>
  </div>
  
</div>
</div>
      <div class="footer bg-color center sec-color px-3 bottom">
        <div>
              <%# <p>Made by @tejumade</p> %>
            <% if user_signed_in? %>
                <p class="d-inline"><%= current_user.email %></p>
                <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link hover-border-b' %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link hover-border-b'  %>
            <% else %>
                <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link hover-border-b'  %>
                <%= link_to "Login", new_user_session_path, :class => 'navbar-link hover-border-b'  %>
            <% end %>
        </div>
        </div>
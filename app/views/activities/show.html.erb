<div class="pt-5"> 
    <%# <div class="center">
        <h1>My Activity</h1>
    </div> %>
    <div class="d-md-flex justify-content-center">
    
    
    <div class=" px-3">
        <div class="w-30">
              
                <div class="center mb-3">
                    <%= image_tag(@activity.activity_name + '.svg', :class => 'w-25' )  %>
                </div>
                <div class="d-flex">
                    <strong>ACTIVITY :</strong>
                    <p class="ml-2"><%= @activity.activity_name %></p>
                </div>

                <div class="d-flex">
                    <strong>DATE :</strong>
                    <p class="ml-2"><%= @activity.date %></p>
                </div>

                <div class="d-flex">
                    <strong>DURATION :</strong>
                    <p class="ml-2"><%= @activity.duration %></p>
                </div>

            </div>
    <div>
   
    
    <div class="d-flex">
        <%# change delete to an icon %>
        <p><%= link_to 'Delete', activity_path(@activity),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></p>
        <p class="ml-3"><%= link_to 'Edit', edit_activity_path(@activity) %></p>
        <p class="ml-3"><%= link_to 'Back', activities_path %></p>

    </div>


    </div>
    
     
</div>


 <div class="footer bg-color center sec-color px-sm-3 bottom py-3">
        <div>
              <%# <p>Made by @tejumade</p> %>
            <% if user_signed_in? %>
                <p class="d-inline"><%= current_user.email %></p>
                <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link hover-border-b' %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link hover-border-b'  %>
            <% else %>
                <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link hover-border-b'  %>
                <%= link_to "Login", new_user_session_path, :class => 'navbar-link hover-border-b'  %>
            <% end %>
        </div>
        </div>
        
